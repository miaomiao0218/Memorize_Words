/**index.wxss**/
@import "/utils/weui.wxss";
page {
  height: 100%;
}

.container {
  height: 100%;
  min-height: 97.6%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 15rpx 15rpx;
  background-color: #f8f9eb;
}

.chat-list {
  flex: 1;
  padding-bottom: 80rpx;
}

.scrool-view {
  height: 91%
}

.chat-left {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.chat-left text {
  flex: 1;
  margin-left: 10rpx;
  padding: 10rpx 5rpx;
  background-color: rgb(243, 250, 181);
  border-radius: 15rpx;
  word-break: break-all;
}

.chat-right {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.chat-right text {
  flex: 1;
  margin-right: 10rpx;
  padding: 10rpx 5rpx;
  background-color: #ffd1d8;
  border-radius: 15rpx;
  word-break: break-all;
}

.avatar-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}

.ask-input-word {
  width: 350%;
 margin-left: -260rpx;
  /* padding: 5rpx; */
  bottom: 10rpx;
  display: flex;
  align-items: center;
}

.ask-input-word input {
  background: #c9c9c7;
  border-radius: 15rpx;
  flex: 1;
  margin-right: 10rpx;
  height:2rem;
  min-height:2rem;
}

.ask-input-word button {
  height:2rem;
  min-height:2rem;
  font-size:18px;
  padding:0 0.34em;
  background: #f0a3a3;
}

.pos-rel {
  position: relative;
}

.pos-abs {
  position: absolute;
}

.olami-info{
  font-size: 10px;
  align-items: right;
}